<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.turboocelots.oasis.controllers.EditProfileActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/edit_profile_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/editEmail"
                android:layout_below="@+id/editEmail"
                android:layout_marginTop="12dp"
                android:text="Edit Profile"
                android:textAlignment="center"
                android:textColor="@color/dark_grey"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/NameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="0.00"
                    android:text="Name"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp"
                    android:textStyle="italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="122dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <Spinner
                    android:id="@+id/TitleSpinner"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/editName"
                    android:layout_alignEnd="@+id/textView7"
                    android:layout_below="@+id/EditProfileView"
                    android:layout_weight="56" />

                <EditText
                    android:id="@+id/editProfile"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/NameView"
                    android:layout_marginTop="12dp"
                    android:layout_weight="251.33"
                    android:ems="10"
                    android:hint="John Doe"
                    android:inputType="textPersonName"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/editEmail"
                android:layout_below="@+id/editEmail"
                android:layout_marginTop="12dp"
                android:text="Home Address"
                android:textColor="@color/dark_grey"
                android:textSize="12sp"
                android:textStyle="italic" />
                android:text="@string/edit_profile_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TitleView"
                tools:text="Title" />
            <EditText
                android:id="@+id/editHomeAddress"
                style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView9"
                android:layout_below="@+id/edit_profile_title"
                android:backgroundTint="@color/almost_white"
                android:ems="10"
                android:hint="ie. 350 Ferst Dr, Atlanta, GA 30332"
                android:inputType="textPostalAddress"
                android:selectAllOnFocus="false"
                android:textSize="14sp" />

            <TextView
                android:text="@string/edit_profile_address_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:labelFor="@+id/editHomeAddress"
                android:layout_marginTop="12dp" />

            <TextView
                android:text="@string/edit_profile_username_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:id="@+id/UsernameView"
                android:labelFor="@+id/editUsername" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView9"
                android:layout_toStartOf="@+id/EditProfileCancel"
                android:ems="10"
                android:hint="ie. (404) 888 - 8888"
                android:inputType="phone"
                android:textSize="14sp" />

            <TextView
                android:text="@string/edit_profile_email_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:labelFor="@+id/editEmail"
                android:layout_marginTop="12dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/PasswordView"
                android:layout_below="@+id/PasswordView"
                android:ems="10"
                android:id="@+id/editEmail"
                android:text="@string/edit_profile_email_hint" />

            <TextView
                android:text="@string/edit_profile_phone_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:labelFor="@+id/editPhoneNumber"
                android:layout_marginTop="14dp" />
                android:layout_alignEnd="@+id/textView9"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/accent_blue"
                android:text="Save"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/almost_white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/EditProfileCancel"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/EditProfileSave"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/editPassword"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/accent_green"
                android:text="Cancel"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/almost_white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

</ScrollView>
