<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.turboocelots.oasis.EditProfileActivity">

    <TextView
        android:text="Edit Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="23dp"
        android:id="@+id/EditProfileView" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditProfileView"
        android:layout_alignStart="@+id/EditProfileView"
        android:layout_marginTop="21dp"
        android:id="@+id/NameView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Enter Name"
        android:ems="10"
        android:layout_below="@+id/NameView"
        android:layout_alignStart="@+id/NameView"
        android:layout_marginTop="12dp"
        android:id="@+id/editName" />

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editName"
        android:layout_alignStart="@+id/editName"
        android:layout_marginTop="19dp"
        android:id="@+id/UsernameView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Enter username"
        android:ems="10"
        android:layout_below="@+id/UsernameView"
        android:layout_alignStart="@+id/UsernameView"
        android:layout_marginTop="17dp"
        android:id="@+id/editUsername" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editUsername"
        android:layout_alignStart="@+id/editUsername"
        android:layout_marginTop="10dp"
        android:id="@+id/PasswordView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/PasswordView"
        android:layout_alignStart="@+id/PasswordView"
        android:layout_marginTop="12dp"
        android:id="@+id/editPassword" />

    <TextView
        android:text="Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPassword"
        android:layout_alignStart="@+id/editPassword"
        android:layout_marginTop="23dp"
        android:id="@+id/TypeView" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TypeView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="325dp"
        android:layout_marginTop="20dp"
        android:id="@+id/TypeSpinner" />

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TypeSpinner"
        android:layout_toEndOf="@+id/NameView"
        android:layout_marginStart="12dp"
        android:layout_marginTop="70dp"
        android:id="@+id/EditProfileSave" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/EditProfileSave"
        android:layout_toEndOf="@+id/editPassword"
        android:id="@+id/EditProfileCancel" />

</RelativeLayout>
