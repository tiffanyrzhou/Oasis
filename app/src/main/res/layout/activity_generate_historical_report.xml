<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.turboocelots.oasis.controllers.GenerateHistoricalReportActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/status_graph" />

    <TextView
        android:text="@string/latitude_text"
        android:layout_width="match_parent"
        android:labelFor="@+id/lat_graph"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/lat_graph" />

    <TextView
        android:text="@string/longitude_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/long_graph" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/long_graph" />

    <TextView
        android:text="@string/generate_historical_report_activity_year_view"
        android:layout_width="match_parent"
        android:labelFor="@+id/year_graph"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/year_graph" />

    <TextView
        android:text="@string/generate_historical_report_activity_ppm_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PPM_graph" />

    <Button
        android:text="@string/generate_historical_report_activity_generate_report_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/generate_Report" />

    <Button
        android:text="@string/generate_historical_report_activity_cancel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cancel_graph" />
</LinearLayout>
