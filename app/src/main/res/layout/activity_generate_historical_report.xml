<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_generate_historical_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.turboocelots.oasis.controllers.GenerateHistoricalReportActivity">

    <TextView
        android:id="@+id/historical_report_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/dark_grey"
        android:textSize="26sp"
        tools:text="Historical Report" />

    <TextView
        android:id="@+id/status_graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/lat_graph"
        android:text="@string/latitude_text" />

    <EditText
        android:id="@+id/lat_graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/long_graph"
        android:text="@string/longitude_text" />

    <EditText
        android:id="@+id/long_graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/year_graph"
        android:text="@string/generate_historical_report_activity_year_view" />

    <EditText
        android:id="@+id/year_graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/generate_historical_report_activity_ppm_view" />

    <Spinner
        android:id="@+id/PPM_graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/generate_Report"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/accent_blue"
        android:elevation="6dp"
        android:text="@string/generate_historical_report_activity_generate_report_button"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/almost_white"
        android:textSize="20sp"
        tools:text="Load Report" />

    <Button
        android:id="@+id/cancel_graph"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/accent_green"
        android:elevation="6dp"
        android:text="@string/generate_historical_report_activity_cancel_button"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/almost_white"
        android:textSize="20sp"
        tools:text="Cancel" />
</LinearLayout>
